}
.scroll-box {
  width: 100vw;
  height: 342rpx;
  white-space: nowrap;
  font-size: 0;
}
.flag-box {
  width: 170rpx;
  height: auto;
  display: inline-block;
  white-space:normal;
}
.flag-detail {
  width: 170rpx;
  height: 157rpx;
  text-align: center;
  position: relative;
}
.click-sel {
  width: 22rpx;
  height: 22rpx;
  background-size: 100% 100%;
