  height: 300px;
  margin: 0 auto;
  position: relative;
  background: rgba(0, 0, 0, 0.3);
}
.sureImg {
  width: 300px;
  height: 300px;
  -webkit-overflow-scrolling: touch;
}
.img-box {
  width: 160px;
  height: 160px;
