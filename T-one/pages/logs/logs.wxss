}
.show {
  display: block;
}
.small-flag {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin: 15rpx auto 8rpx;
  display: block;
}
.flag-name {
  color: #707071;
  font-size: 20rpx;
  text-align: center;
}
.promt {
  font-size: 22rpx;
  color: #ccc;
  margin: 10rpx 20rpx;
