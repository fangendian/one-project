  z-index: 100;
  top: 0;
  left: 0;
}
.rotate-box {
  border: 3px #979797 dashed;
  display: inline-block; 
  position: relative;
  padding: 2px;
  display: none;
}
.content {
  display: block;
}
.flagPhoto {
  width: 150px;
  height: 99px; 
}
.control {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: -25rpx;
  right: -25rpx;
}
.select-yours {
  width: 100%;
  height: auto;
  display: block;
  position: relative;
}
.you-like {
